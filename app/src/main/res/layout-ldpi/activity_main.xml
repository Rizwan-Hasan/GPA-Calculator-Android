<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@drawable/background"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".MainActivity">

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

            <ImageView
                    android:src="@drawable/header"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/imageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp" app:layout_constraintBottom_toTopOf="@+id/constraintLayout"/>

            <android.support.constraint.ConstraintLayout
                    android:layout_width="300dp"
                    android:layout_height="310dp"
                    android:background="@drawable/custom_layout_shape"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:id="@+id/constraintLayout"
                    app:layout_constraintTop_toBottomOf="@+id/imageView"
                    android:layout_marginTop="10dp">

                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:focusable="false"
                        android:background="@android:color/transparent"
                        android:text="@string/subLabel"
                        android:textColor="@color/labelColor"
                        android:textAlignment="center"
                        android:ems="10"
                        android:id="@+id/subLabel"
                        android:textSize="24sp"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp" app:layout_constraintBottom_toTopOf="@+id/subGrades"/>
                <EditText
                        android:hint="@string/gradeHint"
                        android:layout_width="236dp"
                        android:layout_height="41dp"
                        android:id="@+id/subGrades"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/subLabel" android:textSize="12sp"
                        app:layout_constraintHorizontal_bias="0.488" android:layout_marginBottom="11dp"
                        app:layout_constraintBottom_toTopOf="@+id/labLabel"/>
                <Button
                        android:text="@string/calculateBtn"
                        android:background="@drawable/custom_button"
                        android:elevation="10dp"
                        android:textColor="@color/buttonTextColor"
                        android:textSize="12sp"
                        android:layout_width="121dp"
                        android:layout_height="33dp" android:id="@+id/calculateBtn"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.496" android:layout_marginBottom="15dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textViewCGPA"/>
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:focusable="false"
                        android:background="@android:color/transparent"
                        android:text="@string/labLabel"
                        android:textColor="@color/labelColor"
                        android:textAlignment="center"
                        android:ems="10"
                        android:id="@+id/labLabel"
                        android:textSize="24sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/subGrades"
                        app:layout_constraintHorizontal_bias="0.518"
                        android:layout_marginTop="10dp"/>
                <EditText
                        android:hint="@string/gradeHint"
                        android:layout_width="236dp"
                        android:layout_height="41dp" android:id="@+id/labGrades"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/labLabel" android:textSize="12sp"
                        app:layout_constraintBottom_toTopOf="@+id/textViewCGPA"/>
                <TextView
                        android:hint="@string/cgpaHint"
                        android:textColor="@color/cgpaColor"
                        android:textAlignment="center"
                        android:layout_width="231dp"
                        android:layout_height="78dp" android:id="@+id/textViewCGPA"
                        android:textSize="60sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/labGrades"
                        android:layout_marginBottom="5dp" app:layout_constraintBottom_toTopOf="@+id/calculateBtn"/>
            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</LinearLayout>