<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
            android:text="3.99"
            android:paddingTop="30dp"
            android:paddingBottom="20dp"
            android:background="@drawable/gpa_dialogue"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/GPA"
            android:textSize="58sp"
            android:layout_weight="1"
            android:textColor="#558B2F"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/closeBtn"
            app:layout_constraintVertical_chainStyle="spread_inside"
            tools:ignore="HardcodedText,MissingConstraints"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            app:srcCompat="@drawable/ic_mark"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            tools:ignore="ContentDescription"/>

    <Button
            android:text="@string/closeButtonLabel"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:id="@+id/closeBtn"
            android:background="@drawable/gpa_dialogue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/GPA"
            android:layout_marginTop="5dp"/>

</android.support.constraint.ConstraintLayout>