<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AboutActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:id="@+id/constraintLayout3"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintBottom_toTopOf="@+id/scrollView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/version"
                android:fontFamily="sans-serif-medium"
                android:textSize="20sp"
                android:textColor="@color/aboutLabelColor"
                android:id="@+id/editText3"
                app:layout_constraintStart_toEndOf="@+id/imageView6"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/editText2" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/editText5"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/license"
                android:fontFamily="sans-serif-medium"
                android:textSize="20sp"
                android:textColor="@color/aboutLabelColor"
                android:id="@+id/editText5"
                app:layout_constraintStart_toEndOf="@+id/imageView6"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editText3"
                android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp" app:srcCompat="@drawable/about_icon"
                android:id="@+id/imageView6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                tools:ignore="ContentDescription" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintEnd_toStartOf="@+id/editText2"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="26sp"
                android:textColor="@color/aboutLabelColor"
                android:id="@+id/editText2"
                app:layout_constraintBottom_toTopOf="@+id/editText3"
                app:layout_constraintStart_toEndOf="@+id/imageView6"
                android:layout_marginBottom="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_chainStyle="spread_inside"/>
    </android.support.constraint.ConstraintLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/scrollView2"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:id="@+id/linearLayout9" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout12">

                    <TextView
                            android:text="@string/director"
                            android:textSize="20sp"
                            android:textColor="@color/aboutLabelColor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/pdName"/>
                    <TextView
                            android:text="@string/directorEmail"
                            android:textSize="20sp"
                            android:textColor="@color/aboutLabelColor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/pdEmail"/>

                </LinearLayout>

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        android:id="@+id/linearLayout12"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout9" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toTopOf="@+id/linearLayout10">
                    <TextView
                            android:text="@string/developer"
                            android:textSize="20sp"
                            android:textColor="@color/aboutLabelColor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/devName"/>
                    <TextView
                            android:text="@string/developerEmail"
                            android:textSize="20sp"
                            android:textColor="@color/aboutLabelColor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/devEmail"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:id="@+id/linearLayout10"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout12" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toTopOf="@+id/linearLayout11">
                    <TextView
                            android:text="@string/logoContributor"
                            android:textSize="20sp"
                            android:textColor="@color/aboutLabelColor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/lcName"/>
                    <TextView
                            android:text="@string/logoContributorEmail"
                            android:textSize="20sp"
                            android:textColor="@color/aboutLabelColor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/lcEmail"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        android:id="@+id/linearLayout11"
                        app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout10">
                    <TextView
                            android:text="@string/testerInfo"
                            android:textSize="20sp"
                            android:textColor="@color/aboutLabelColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/testerTeam"/>
                </LinearLayout>


            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>