<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@drawable/background"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".MainActivity">

    <ScrollView android:layout_width="fill_parent"
                android:layout_height="fill_parent">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

            <ImageView
                    android:src="@drawable/header"
                    android:layout_width="282dp"
                    android:layout_height="92dp"
                    android:id="@+id/imageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="20dp"
                    app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
                    app:layout_constraintHorizontal_bias="0.473"/>

            <android.support.constraint.ConstraintLayout
                    android:layout_width="295dp"
                    android:layout_height="365dp"
                    android:background="@drawable/custom_layout_shape"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:id="@+id/constraintLayout"
                    app:layout_constraintTop_toBottomOf="@+id/imageView"
                    android:layout_marginTop="15dp">

                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:focusable="false"
                        android:background="@android:color/transparent"
                        android:text="@string/subLabel"
                        android:textColor="@color/labelColor"
                        android:textAlignment="center"
                        android:ems="10"
                        android:id="@+id/subLabel"
                        android:textSize="25sp"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="15dp"
                        app:layout_constraintHorizontal_bias="0.0"/>
                <EditText
                        android:hint="@string/gradeHint"
                        android:layout_width="230dp"
                        android:textSize="15sp"
                        android:layout_height="wrap_content" android:id="@+id/subGrades"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/subLabel"/>
                <Button
                        android:text="@string/calculateBtn"
                        android:background="@drawable/custom_button"
                        android:elevation="10dp"
                        android:textColor="@color/buttonTextColor"
                        android:textSize="15sp"
                        android:layout_width="154dp"
                        android:layout_height="40dp" android:id="@+id/calculateBtn"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textViewCGPA"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:focusable="false"
                        android:background="@android:color/transparent"
                        android:text="@string/labLabel"
                        android:textColor="@color/labelColor"
                        android:textAlignment="center"
                        android:ems="10"
                        android:id="@+id/labLabel"
                        android:textSize="25sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/subGrades"/>
                <EditText
                        android:hint="@string/gradeHint"
                        android:layout_width="230dp"
                        android:textSize="15sp"
                        android:layout_height="wrap_content" android:id="@+id/labGrades"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/labLabel"/>
                <TextView
                        android:hint="@string/cgpaHint"
                        android:textColor="@color/cgpaColor"
                        android:textAlignment="center"
                        android:layout_width="265dp"
                        android:layout_height="98dp" android:id="@+id/textViewCGPA"
                        android:textSize="66sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/labGrades"/>
            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</LinearLayout>